<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MegMessageActivity">

    <TextView
            android:text="@string/meg_message_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meg_message_label"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:textSize="30sp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorRed"
            app:layout_constraintStart_toStartOf="@+id/meg_message_label"
            app:layout_constraintTop_toBottomOf="@+id/meg_message_label" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Here we go, here we go, here we go again! Get organized this week! Take out your calendar, pencil your workouts in, decide on a few quick and easy meals you want to make, and let's have a successful week. Our Septemeber challenge is inching closer and closer, and I can't wait to tell you more about it. Keep working hard this week. You know I'll be doing the same. ;) Let's GO!  xo Meg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/meg_message_label"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>