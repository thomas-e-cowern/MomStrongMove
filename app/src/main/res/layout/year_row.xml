<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="80dp"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/year_row_month_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/year_row_month_textView"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/year_row_divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorRed"
            app:layout_constraintEnd_toEndOf="@+id/year_row_month_textView"
            app:layout_constraintStart_toStartOf="@+id/year_row_month_textView"
            app:layout_constraintTop_toBottomOf="@+id/year_row_month_textView" />

    <TextView
            android:id="@+id/year_row_percentage_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/year_row_percentage_textView"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/year_row_month_textView"
            app:layout_constraintStart_toStartOf="@+id/year_row_month_textView"
            app:layout_constraintTop_toBottomOf="@+id/year_row_divider" />
</android.support.constraint.ConstraintLayout>